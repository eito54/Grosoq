{
  "name": "Grosoq",
  "version": "2.6.0",
  "private": true,
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "start": "electron-vite preview",
    "build-win": "electron-vite build && electron-builder --win",
    "build-mac": "electron-vite build && electron-builder --mac",
    "build-linux": "electron-vite build && electron-builder --linux",
    "pack": "electron-builder --dir",
    "dist": "npm run build",
    "release": "electron-builder --publish=always",
    "release-win": "electron-builder --win --publish=always",
    "release-mac": "electron-builder --mac --publish=always",
    "release-linux": "electron-builder --linux --publish=always"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0",
    "npm": "use pnpm please!",
    "yarn": "use pnpm please!"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "clsx": "^2.1.1",
    "electron-updater": "^6.1.8",
    "framer-motion": "^12.24.0",
    "i18next": "^25.7.3",
    "lucide-react": "^0.562.0",
    "obs-websocket-js": "^5.0.6",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-i18next": "^16.5.1",
    "react-router-dom": "^7.11.0",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@electron-toolkit/tsconfig": "^2.0.0",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.23",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "electron-vite": "^5.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "vite": "^7.3.0"
  },
  "optionalDependencies": {
    "electron-store": "^8.2.0",
    "express": "^4.21.2"
  },
  "main": "./out/main/index.js",
  "description": "Grosoq - MK8DXレース結果自動取得アプリ (Powered by Groq)",
  "author": "eito54",
  "build": {
    "appId": "com.gemisoku.gui",
    "productName": "Grosoq",
    "directories": {
      "output": "dist-gui"
    },
    "files": [
      "out/**/*",
      "public/**/*",
      "node_modules/electron-store/**/*",
      "node_modules/obs-websocket-js/**/*",
      "node_modules/@google/generative-ai/**/*",
      "node_modules/express/**/*",
      "node_modules/electron-updater/**/*",
      "!node_modules/.cache",
      "!node_modules/*/{test,tests,spec,specs,example,examples,*.md,*.MD,*.txt,*.TXT,*.yml,*.yaml,*.json.d.ts}",
      "!node_modules/*/{README,readme,CHANGELOG,changelog,HISTORY,history,LICENSE,license,LICENCE,licence}*"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "eito54",
        "repo": "grosoq",
        "releaseType": "release"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/logo.jpeg",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "publish": [
        {
          "provider": "github",
          "owner": "eito54",
          "repo": "grosoq"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "differentialPackage": true
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/logo.jpeg",
      "category": "public.app-category.entertainment"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/logo.jpeg",
      "category": "Game"
    }
  }
}